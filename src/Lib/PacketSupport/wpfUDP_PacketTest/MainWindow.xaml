<Window x:Class="wpfUDP_PacketTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfUDP_PacketTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="100" Width="400" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Field Name" FontSize="12" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbFieldName" Width="100" Height="30" Margin="8" VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <RadioButton x:Name="rbZero" Content="0" />
                <RadioButton x:Name="rbOne" Content="1"/>
            </StackPanel>
            <Button x:Name="btnSend" Content="Send" Width="80" Height="30" Margin="8" VerticalAlignment="Center" Click="btnSend_Click" />
        </StackPanel>
    </Grid>
</Window>
