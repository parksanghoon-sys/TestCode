<Window x:Class="wpf.Ui.DataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf.Ui.DataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="datagrid" Style="{StaticResource PassiveScrollViewer}" Margin="-3,2,3,-2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Me" Binding="{Binding vvv.Value}"/>
                <DataGridTextColumn Header="Me" Binding="{Binding vvv.Value}"/>
                <DataGridTextColumn Header="Me" Binding="{Binding vvv.Value}"/>
                <DataGridTextColumn Header="Me" Binding="{Binding vvv.Value}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
